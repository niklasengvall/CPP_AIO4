{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C++ Release: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-O3",
                "-Wall",
				"-std=c++20",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}_R.o"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C++ Debug: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-Og",
                "-Wall",
                "-Wextra",
                "-pedantic",
				"-std=c++20",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}_D.o"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}